<footer class="footer-section">
    <div class="footer">
        <a class="logotype" href="{{ common.logo_link }}">
            <img class="logotype__image" src="{{ common.logo_src }}" alt="{{ common.logo_alt }}">
        </a>
        <p class="footer__title">{{ common.footer.wording }}</p>
        <div class="sitemap">
            <strong class="sitemap__title">{{ common.footer.navigation.title }}</strong>
            <ul class="sitemap__list">
                {% for item in common.footer.navigation.list %}
                <li class="sitemap__item">
                    <a class="sitemap__link" href="{{ item.link }}">{{ item.text }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
        <p class="footer__rights">{{ common.footer.clause }}</p>
        <ul class="social">
            {% for item in common.footer.socials %}
                <li class="social__item">
                    <a class="social__link" href="{{ item.link }}">
                        <img class="social__image" src="{{ item.logo }}" width="24" height="24" alt="{{ item.alt }}">
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</footer>